{
  "name": "RandomNumberGenerator",
  "version": "1.0.0",
  "description": "A simple random number generator",
  "main": "index.js",
  "repository": "https://github.com/Oscarz90/RandomNumberGenerator",
  "author": "OMS",
  "license": "MIT",
  "scripts": {
    "test": "mocha --require babel-core/register  ./test/**/*.test.js",
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run init",
    "build:single": "babel ./src/index.js -o ./dist/index.js",
